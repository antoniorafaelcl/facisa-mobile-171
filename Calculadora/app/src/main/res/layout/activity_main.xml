<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp"
    android:stretchColumns="0,1,2,3"

    tools:context="com.rafaelcarvalho.calculadora.MainActivity">

    <TableRow>

        <EditText
            android:id="@+id/txt_visor"
            android:layout_weight="1"
            android:inputType="number"
            android:text="0.0"
            android:paddingBottom="50dp"
            android:textSize="30dp"
            android:gravity="right"
            android:background="@drawable/shape_edt"
            android:focusable="false"
            android:enabled="true"


            />
    </TableRow>

    <TableRow
        >

        <Button
            android:id="@+id/bt_7"
            android:paddingBottom="50dp"
            android:text="7" />

        <Button
            android:id="@+id/bt_8"
            android:text="8"
            android:paddingBottom="50dp"
            />

        <Button
            android:id="@+id/bt_9"
            android:text="9"
            android:paddingBottom="50dp"/>

        <Button
            android:id="@+id/bt_divi"
            android:text="/"
            android:paddingBottom="50dp"/>
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/bt_4"
            android:text="4"
            android:paddingBottom="50dp"/>

        <Button
            android:id="@+id/bt_5"
            android:text="5"
            android:paddingBottom="50dp"/>

        <Button
            android:id="@+id/bt_6"
            android:text="6"
            android:paddingBottom="50dp"/>

        <Button
            android:id="@+id/bt_multi"
            android:text="*"
            android:paddingBottom="50dp"/>
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/bt_1"
            android:text="1"
            android:paddingBottom="50dp"/>

        <Button
            android:id="@+id/bt_2"
            android:text="2"
            android:paddingBottom="50dp"/>

        <Button
            android:id="@+id/bt_3"
            android:text="3"
            android:paddingBottom="50dp"/>

        <Button
            android:id="@+id/bt_subt"
            android:text="-"
            android:paddingBottom="50dp"/>
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/bt_ponto"
            android:text="."
            android:paddingBottom="50dp"/>

        <Button
            android:id="@+id/bt_0"
            android:text="0"
            android:paddingBottom="50dp"/>

        <Button
            android:id="@+id/bt_igual"
            android:text="="
            android:paddingBottom="50dp"/>

        <Button
            android:id="@+id/bt_soma"
            android:text="+"
            android:paddingBottom="50dp"/>
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/bt_c"
            android:layout_weight="1"
            android:text="C" android:paddingBottom="50dp"/>

        <Button
            android:id="@+id/bt_sair"
            android:layout_weight="1"
            android:text="Sair"
            android:paddingBottom="50dp"/>
    </TableRow>


</TableLayout>
